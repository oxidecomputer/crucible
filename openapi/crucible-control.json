{
  "openapi": "3.0.3",
  "info": {
    "title": "Crucible Control",
    "version": "0.0.0"
  },
  "paths": {
    "/downstairs/fault/{cid}": {
      "post": {
        "operationId": "fault_downstairs",
        "parameters": [
          {
            "in": "path",
            "name": "cid",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "uint8",
              "minimum": 0
            }
          }
        ],
        "responses": {
          "204": {
            "description": "resource updated"
          },
          "4XX": {
            "$ref": "#/components/responses/Error"
          },
          "5XX": {
            "$ref": "#/components/responses/Error"
          }
        }
      }
    },
    "/info": {
      "get": {
        "summary": "Fetch the current value for all the stats in the UpstairsStats struct",
        "operationId": "upstairs_fill_info",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UpstairsStats"
                }
              }
            }
          },
          "4XX": {
            "$ref": "#/components/responses/Error"
          },
          "5XX": {
            "$ref": "#/components/responses/Error"
          }
        }
      }
    },
    "/snapshot": {
      "post": {
        "operationId": "take_snapshot",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TakeSnapshotParams"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "successful creation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TakeSnapshotResponse"
                }
              }
            }
          },
          "4XX": {
            "$ref": "#/components/responses/Error"
          },
          "5XX": {
            "$ref": "#/components/responses/Error"
          }
        }
      }
    },
    "/work": {
      "get": {
        "summary": "Fetch the current downstairs work queue and populate a WorkSummary",
        "description": "struct for each job we find.",
        "operationId": "downstairs_work_queue",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DownstairsWork"
                }
              }
            }
          },
          "4XX": {
            "$ref": "#/components/responses/Error"
          },
          "5XX": {
            "$ref": "#/components/responses/Error"
          }
        }
      }
    }
  },
  "components": {
    "responses": {
      "Error": {
        "description": "Error",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      }
    },
    "schemas": {
      "AckStatus": {
        "type": "string",
        "enum": [
          "NotAcked",
          "AckReady",
          "Acked"
        ]
      },
      "DownstairsWork": {
        "description": "`DownstairsWork` holds the information gathered from the downstairs",
        "type": "object",
        "properties": {
          "completed": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/WorkSummary"
            }
          },
          "jobs": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/WorkSummary"
            }
          }
        },
        "required": [
          "completed",
          "jobs"
        ]
      },
      "DsState": {
        "type": "string",
        "enum": [
          "new",
          "bad_version",
          "wait_active",
          "wait_quorum",
          "bad_region",
          "disconnected",
          "verifying",
          "repair",
          "failed_repair",
          "active",
          "faulted",
          "online_repair",
          "migrating",
          "offline",
          "replay",
          "deactivated",
          "disabled"
        ]
      },
      "Error": {
        "description": "Error information from a response.",
        "type": "object",
        "properties": {
          "error_code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "request_id": {
            "type": "string"
          }
        },
        "required": [
          "message",
          "request_id"
        ]
      },
      "TakeSnapshotParams": {
        "description": "Signal to the Upstairs to take a snapshot",
        "type": "object",
        "properties": {
          "snapshot_name": {
            "type": "string"
          }
        },
        "required": [
          "snapshot_name"
        ]
      },
      "TakeSnapshotResponse": {
        "type": "object",
        "properties": {
          "snapshot_name": {
            "type": "string"
          }
        },
        "required": [
          "snapshot_name"
        ]
      },
      "UpState": {
        "type": "string",
        "enum": [
          "initializing",
          "active",
          "deactivating"
        ]
      },
      "UpstairsStats": {
        "description": "`UpstairsInfo` holds the information gathered from the upstairs to fill a response to a GET request",
        "type": "object",
        "properties": {
          "ds_jobs": {
            "type": "integer",
            "format": "uint",
            "minimum": 0
          },
          "ds_state": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DsState"
            }
          },
          "extent_limit": {
            "type": "array",
            "items": {
              "nullable": true,
              "type": "integer",
              "format": "uint",
              "minimum": 0
            }
          },
          "extents_confirmed": {
            "type": "array",
            "items": {
              "type": "integer",
              "format": "uint",
              "minimum": 0
            }
          },
          "extents_repaired": {
            "type": "array",
            "items": {
              "type": "integer",
              "format": "uint",
              "minimum": 0
            }
          },
          "repair_done": {
            "type": "integer",
            "format": "uint",
            "minimum": 0
          },
          "repair_needed": {
            "type": "integer",
            "format": "uint",
            "minimum": 0
          },
          "state": {
            "$ref": "#/components/schemas/UpState"
          },
          "up_jobs": {
            "type": "integer",
            "format": "uint",
            "minimum": 0
          }
        },
        "required": [
          "ds_jobs",
          "ds_state",
          "extent_limit",
          "extents_confirmed",
          "extents_repaired",
          "repair_done",
          "repair_needed",
          "state",
          "up_jobs"
        ]
      },
      "WorkSummary": {
        "description": "A summary of information from a DownstairsIO struct.",
        "type": "object",
        "properties": {
          "ack_status": {
            "$ref": "#/components/schemas/AckStatus"
          },
          "deps": {
            "type": "array",
            "items": {
              "type": "integer",
              "format": "uint64",
              "minimum": 0
            }
          },
          "id": {
            "type": "integer",
            "format": "uint64",
            "minimum": 0
          },
          "job_type": {
            "type": "string"
          },
          "num_blocks": {
            "type": "integer",
            "format": "uint",
            "minimum": 0
          },
          "replay": {
            "type": "boolean"
          },
          "state": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "ack_status",
          "deps",
          "id",
          "job_type",
          "num_blocks",
          "replay",
          "state"
        ]
      }
    }
  }
}