{
  "openapi": "3.0.3",
  "info": {
    "title": "Crucible Control",
    "version": "0.0.0"
  },
  "paths": {
    "/info": {
      "get": {
        "summary": "Fetch the current value for all the stats in the UpstairsStats struct",
        "operationId": "upstairs_fill_info",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UpstairsStats"
                }
              }
            }
          },
          "4XX": {
            "$ref": "#/components/responses/Error"
          },
          "5XX": {
            "$ref": "#/components/responses/Error"
          }
        }
      }
    },
    "/work": {
      "get": {
        "summary": "Fetch the current downstairs work queue and populate a WorkSummary",
        "description": "struct for each job we find.",
        "operationId": "downstairs_work_queue",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DownstairsWork"
                }
              }
            }
          },
          "4XX": {
            "$ref": "#/components/responses/Error"
          },
          "5XX": {
            "$ref": "#/components/responses/Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AckStatus": {
        "type": "string",
        "enum": [
          "not_acked",
          "ack_ready",
          "acked"
        ]
      },
      "DownstairsWork": {
        "description": "`DownstairsWork` holds the information gathered from the downstairs",
        "type": "object",
        "properties": {
          "completed": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/WorkSummary"
            }
          },
          "jobs": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/WorkSummary"
            }
          }
        },
        "required": [
          "completed",
          "jobs"
        ]
      },
      "DsState": {
        "type": "string",
        "enum": [
          "new",
          "wait_active",
          "wait_quorum",
          "disconnected",
          "reconcile",
          "active",
          "faulted",
          "live_repair_ready",
          "live_repair",
          "migrating",
          "offline",
          "deactivated",
          "disabled",
          "replacing",
          "replaced"
        ]
      },
      "Error": {
        "description": "Error information from a response.",
        "type": "object",
        "properties": {
          "error_code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "request_id": {
            "type": "string"
          }
        },
        "required": [
          "message",
          "request_id"
        ]
      },
      "UpState": {
        "type": "string",
        "enum": [
          "initializing",
          "active",
          "deactivating"
        ]
      },
      "UpstairsStats": {
        "description": "`UpstairsInfo` holds the information gathered from the upstairs to fill a response to a GET request",
        "type": "object",
        "properties": {
          "ds_jobs": {
            "type": "integer",
            "format": "uint",
            "minimum": 0
          },
          "ds_state": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DsState"
            }
          },
          "extent_limit": {
            "type": "array",
            "items": {
              "nullable": true,
              "type": "integer",
              "format": "uint",
              "minimum": 0
            }
          },
          "extents_confirmed": {
            "type": "array",
            "items": {
              "type": "integer",
              "format": "uint",
              "minimum": 0
            }
          },
          "extents_repaired": {
            "type": "array",
            "items": {
              "type": "integer",
              "format": "uint",
              "minimum": 0
            }
          },
          "live_repair_aborted": {
            "type": "array",
            "items": {
              "type": "integer",
              "format": "uint",
              "minimum": 0
            }
          },
          "live_repair_completed": {
            "type": "array",
            "items": {
              "type": "integer",
              "format": "uint",
              "minimum": 0
            }
          },
          "reconcile_done": {
            "type": "integer",
            "format": "uint",
            "minimum": 0
          },
          "reconcile_needed": {
            "type": "integer",
            "format": "uint",
            "minimum": 0
          },
          "state": {
            "$ref": "#/components/schemas/UpState"
          },
          "up_jobs": {
            "type": "integer",
            "format": "uint",
            "minimum": 0
          }
        },
        "required": [
          "ds_jobs",
          "ds_state",
          "extent_limit",
          "extents_confirmed",
          "extents_repaired",
          "live_repair_aborted",
          "live_repair_completed",
          "reconcile_done",
          "reconcile_needed",
          "state",
          "up_jobs"
        ]
      },
      "WorkSummary": {
        "description": "A summary of information from a DownstairsIO struct.",
        "type": "object",
        "properties": {
          "ack_status": {
            "$ref": "#/components/schemas/AckStatus"
          },
          "deps": {
            "type": "array",
            "items": {
              "type": "integer",
              "format": "uint64",
              "minimum": 0
            }
          },
          "id": {
            "type": "integer",
            "format": "uint64",
            "minimum": 0
          },
          "job_type": {
            "type": "string"
          },
          "num_blocks": {
            "type": "integer",
            "format": "uint",
            "minimum": 0
          },
          "replay": {
            "type": "boolean"
          },
          "state": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "ack_status",
          "deps",
          "id",
          "job_type",
          "num_blocks",
          "replay",
          "state"
        ]
      }
    },
    "responses": {
      "Error": {
        "description": "Error",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      }
    }
  }
}
